@model webban.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<h2>Create Category</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryPhoto"></label>
        <input asp-for="CategoryPhoto" class="form-control" />
        <span asp-validation-for="CategoryPhoto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryOrder"></label>
        <input asp-for="CategoryOrder" class="form-control" type="number" />
        <span asp-validation-for="CategoryOrder" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
